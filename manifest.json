{
  "manifest_version": 3,
  "name": "Gmail Template Inserter",
  "version": "1.0",
  "permissions": [
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://mail.google.com/*"
  ]
}
